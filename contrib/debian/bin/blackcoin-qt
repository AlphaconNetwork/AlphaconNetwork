#!/bin/sh

set -e

umask 077

basedir=~/.alphacon
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/alphacon.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Alphacon does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/alphacon/alphacon-qt "$@"
